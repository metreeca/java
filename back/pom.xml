<project xmlns="http://maven.apache.org/POM/4.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.metreeca</groupId>
		<artifactId>core</artifactId>
		<version>0.0-SNAPSHOT</version>
	</parent>

	<artifactId>back</artifactId>
	<version>0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Metreeca Back-End</name>
	<description>Metreeca back-end components.</description>

	<modules>
		<module>next</module>
		<module>link</module>
		<module>mill</module>
		<module>tray</module>
		<module>spec</module>
		<module>jeep</module>
	</modules>

	<build>
		<plugins>

			<plugin> <!-- source jar generation / https://maven.apache.org/plugins/maven-source-plugin -->

				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.0.1</version>

				<executions>
					<execution>

						<id>attach-sources</id>

						<goals>
							<goal>jar</goal>
						</goals>

					</execution>
				</executions>

			</plugin>

			<plugin> <!-- javadocs generation / https://maven.apache.org/plugins/maven-javadoc-plugin/ -->

				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.0.0</version>

				<executions>
					<execution>

						<id>generate javadocs</id>

						<goals>
							<goal>jar</goal>
						</goals>

						<configuration>

							<outputDirectory>${project.build.directory}/site/javadocs</outputDirectory>

							<stylesheetfile>stylesheet.css</stylesheetfile>

							<links>
								<link>http://docs.rdf4j.org/javadoc/latest/</link>
							</links>

						</configuration>

					</execution>
				</executions>

			</plugin>

			<plugin> <!-- test jar generation / https://maven.apache.org/plugins/maven-jar-plugin/-->

				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.6</version>

				<executions>
					<execution> <!-- generate test jar -->
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>

			</plugin>

		</plugins>
	</build>

</project>
