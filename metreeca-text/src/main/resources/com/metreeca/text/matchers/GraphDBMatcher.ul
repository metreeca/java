#### RDFRank Configuration #############################################################################################

insert data {

	rank:filtering rank:setParam true.

	rank:includeExplicit rank:setParam true.
	rank:includeImplicit rank:setParam true.

	<app://text.metreeca.com/documents/> rank:includedGraphs "add".

	<app://text.metreeca.com/annotations/> rank:includedGraphs "add".

	<app://text.metreeca.com/entities/> rank:includedGraphs "add".
	<app://text.metreeca.com/concepts/> rank:includedGraphs "add".
	<app://text.metreeca.com/ontologies/> rank:includedGraphs "add".

}