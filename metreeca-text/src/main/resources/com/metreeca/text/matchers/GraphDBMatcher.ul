prefix lucene:<http://www.ontotext.com/connectors/lucene#>
prefix index:<http://www.ontotext.com/connectors/lucene/instance#>
prefix rank: <http://www.ontotext.com/owlim/RDFRank#>


#### Document Lucene Connector #########################################################################################

insert data {
	index:documents lucene:createConnector '''{
		"fields": [
			{
				"fieldName": "title$1",
				"propertyChain": [
					"http://www.w3.org/2000/01/rdf-schema#label"
				],
				"indexed": true,
				"stored": false,
				"analyzed": true,
				"multivalued": true,
				"facet": false
			},
			{
				"fieldName": "title$2",
				"propertyChain": [
					"http://purl.org/dc/elements/1.1/title"
				],
				"indexed": true,
				"stored": false,
				"analyzed": true,
				"multivalued": true,
				"facet": false
			},
			{
				"fieldName": "content$1",
				"propertyChain": [
					"http://www.w3.org/2000/01/rdf-schema#comment"
				],
				"indexed": true,
				"stored": false,
				"analyzed": true,
				"multivalued": true,
				"facet": false
			},
			{
				"fieldName": "content$2",
				"propertyChain": [
					"http://purl.org/dc/elements/1.1/description"
				],
				"indexed": true,
				"stored": false,
				"analyzed": true,
				"multivalued": true,
				"facet": false
			}
		],
		"languages": [{languages}],
		"types": [
			"app://text.metreeca.com/terms#Document"
		],
		"readonly": false,
		"detectFields": false,
		"importGraph": false,
		"boostProperties": [ ],
		"stripMarkup": false
	}''' .
};


