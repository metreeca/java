<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.metreeca</groupId>
		<artifactId>core</artifactId>
		<version>0.46</version>
	</parent>

	<artifactId>fore</artifactId>
	<version>0.46</version>
	<packaging>pom</packaging>

	<name>Metreeca Front-End</name>
	<description>Metreeca front-end components.</description>

	<modules>

		<!-- apps -->

		<module>deck</module>
		<module>self</module>

		<!-- libraries -->

		<module>mesh</module>
		<module>tool</module>
		<module>node</module>

		<!-- legacy libraries -->

		<module>_tool</module>
		<module>_info</module>
		<module>_tile</module>
		<module>_jeep</module>
		<module>_bean</module>

	</modules>

	<properties>

		<gwt.version>2.8.1</gwt.version>
		<elemental2.version>1.0.0-RC1</elemental2.version>

	</properties>

	<dependencies>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>${gwt.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-dev</artifactId>
			<version>${gwt.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.google.elemental2</groupId>
			<artifactId>elemental2-core</artifactId>
			<version>${elemental2.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.google.elemental2</groupId>
			<artifactId>elemental2-dom</artifactId>
			<version>${elemental2.version}</version>
		</dependency>

	</dependencies>

	<build>

		<pluginManagement>
			<plugins>

				<plugin> <!-- GWT compiler / https://tbroyer.github.io/gwt-maven-plugin -->

					<groupId>net.ltgt.gwt.maven</groupId>
					<artifactId>gwt-maven-plugin</artifactId>
					<version>1.0-rc-9</version>
					<extensions>true</extensions>

					<configuration>

						<style>pretty</style>
						<optimize>9</optimize>

						<!-- decouple from project configuration -->
						<sourceLevel>1.8</sourceLevel>

						<!-- ;(idea) manual modules until https://youtrack.jetbrains.com/issue/IDEA-171158  -->
						<skipModule>true</skipModule>

						<!--<skipCompilation>true</skipCompilation>-->

					</configuration>

				</plugin>

			</plugins>
		</pluginManagement>

	</build>

</project>
