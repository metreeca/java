<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">

	<!--~~ CORS Support / !!! migrate to custom implementation ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

	<filter>

		<filter-name>cors</filter-name>
		<filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>

		<init-param>
			<param-name>cors.exposedHeaders</param-name>
			<param-value>Link, Location</param-value>
		</init-param>

	</filter>

	<filter-mapping>
		<filter-name>cors</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

	<listener>
		<listener-class>com.metreeca.j2ee.Gateway</listener-class>
	</listener>

	<filter>
		<filter-name>gateway</filter-name>
		<filter-class>com.metreeca.j2ee.Gateway</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>gateway</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
